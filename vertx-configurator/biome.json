{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"indentWidth": 4
	},
	"linter": {
		"rules": {
			"complexity": {
				"useSimplifiedLogicExpression": "warn"
			},
			"correctness": {
				"all": true
			},
			"style": {
				"noDefaultExport": "error",
				"noNamespace": "warn",
				"noNegationElse": "warn",
				"noParameterProperties": "warn",
				"useBlockStatements": "warn",
				"useCollapsedElseIf": "warn",
				"useConsistentArrayType": {
					"level": "warn",
					"options": {
						"syntax": "generic"
					}
				},
				"useEnumInitializers": "off",
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": [
							"PascalCase",
							"kebab-case"
						]
					}
				},
				"useForOf": "warn",
				"useNamingConvention": "warn",
				"useShorthandAssign": "warn"
			},
			"suspicious": {
				"noApproximativeNumericConstant": "warn",
				"noConsoleLog": "warn",
				"noConstEnum": "off",
				"noEmptyBlockStatements": "warn",
				"noMisrefactoredShorthandAssign": "warn",
				"useAwait": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"json": {
		"formatter": {
			"enabled": false
		}
	},
	"overrides": [
		{
			"include": [
				"src/pages/*.tsx"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"include": [
				"./*.ts"
			],
			"javascript": {
				"globals": [
					"Bun"
				]
			}
		}
	]
}
