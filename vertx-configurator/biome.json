{
	"$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
	"extends": ["../.config/biome.json"],
	"overrides": [
		{
			"include": ["astro.config.ts"],
			"javascript": {
				"globals": ["Bun"]
			},
			"linter": {
				"rules": {
					"correctness": {
						"noNodejsModules": "off"
					}
				}
			}
		},
		{
			"include": ["*.astro"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedImports": "off",
						"noUnusedVariables": "off"
					}
				}
			}
		},
		{
			"include": [":*.astro"],
			"linter": {
				"rules": {
					"style": {
						"useFilenamingConvention": "off"
					}
				}
			}
		}
	]
}
