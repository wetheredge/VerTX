---
export type IconProps = {
	'aria-hidden'?: boolean;
	width?: number | string;
	height?: number | string;
	'stroke-width'?: number | string;
};

export type RawIcon = (props: IconProps) => unknown;

export type Props = {
	icon: RawIcon;
	size?: string | number;
};

const { icon: RawIcon, size = '1em' } = Astro.props;
---

<RawIcon aria-hidden width={size} height={size} stroke-width="2" />
