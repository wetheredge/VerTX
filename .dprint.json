{
	"json": {
		"useTabs": true
	},
	"markdown": {
		"textWrap": "always"
	},
	"toml": {
		"indentWidth": 4
	},
	"excludes": [
		"**/*-lock.json",
		"**/*~",
		"target",
		".pnpm-store"
	],
	"plugins": [
		"https://plugins.dprint.dev/dockerfile-0.3.0.wasm",
		"https://plugins.dprint.dev/json-0.19.2.wasm",
		"https://plugins.dprint.dev/markdown-0.16.4.wasm",
		"https://plugins.dprint.dev/toml-0.6.1.wasm"
	]
}
