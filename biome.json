{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true
	},
	"formatter": {
		"indentWidth": 4
	},
	"linter": {
		"rules": {
			"complexity": {
				"useSimplifiedLogicExpression": "warn"
			},
			"correctness": {
				"all": true
			},
			"style": {
				"noDefaultExport": "error",
				"noNamespace": "warn",
				"noNegationElse": "warn",
				"noParameterProperties": "warn",
				"useBlockStatements": "warn",
				"useCollapsedElseIf": "warn",
				"useConsistentArrayType": {
					"level": "warn",
					"options": {
						"syntax": "generic"
					}
				},
				"useEnumInitializers": "off",
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": ["PascalCase", "kebab-case"]
					}
				},
				"useForOf": "warn",
				"useNamingConvention": "warn",
				"useShorthandAssign": "warn"
			},
			"suspicious": {
				"noApproximativeNumericConstant": "warn",
				"noConsoleLog": "warn",
				"noConstEnum": "off",
				"noEmptyBlockStatements": "warn",
				"noMisrefactoredShorthandAssign": "warn",
				"useAwait": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"overrides": [
		{
			"include": ["./scripts/update.ts"],
			"linter": {
				"rules": {
					"style": {
						"noNonNullAssertion": "off"
					}
				}
			}
		},
		{
			"include": ["./scripts/set-target.ts"],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": "off"
					}
				}
			}
		},
		{
			"include": ["./scripts/*.ts", "./vertx-configurator/scripts/*.ts"],
			"javascript": {
				"globals": ["Bun"]
			},
			"linter": {
				"rules": {
					"correctness": {
						"noNodejsModules": "off"
					}
				}
			}
		},
		{
			"include": ["./vertx-configurator/src/pages/*.tsx"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		}
	]
}
