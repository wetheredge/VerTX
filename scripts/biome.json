{
	"$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
	"extends": ["../.config/biome.json"],
	"javascript": {
		"globals": ["Bun", "HTMLRewriter"]
	},
	"linter": {
		"rules": {
			"correctness": {
				"noNodejsModules": "off"
			}
		}
	},
	"overrides": [
		{
			"include": ["./build-target.ts", "./set-target.ts"],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": "off"
					}
				}
			}
		},
		{
			"include": ["./check-targets.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsoleLog": "off"
					}
				}
			}
		},
		{
			"include": ["./fetch-tools/*.ts", "./update.ts"],
			"linter": {
				"rules": {
					"style": {
						"noNonNullAssertion": "off"
					}
				}
			}
		},
		{
			"include": ["./fetch-tools/*.ts"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		}
	]
}
