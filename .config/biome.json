{
	"$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": [".vite/*"],
		"ignoreUnknown": true
	},
	"formatter": {
		"indentWidth": 4
	},
	"linter": {
		"rules": {
			"complexity": {
				"useSimplifiedLogicExpression": "warn"
			},
			"correctness": {
				"all": true,
				"useImportExtensions": "off"
			},
			"style": {
				"noDefaultExport": "error",
				"noNamespace": "warn",
				"noNegationElse": "warn",
				"noParameterProperties": "warn",
				"useBlockStatements": "warn",
				"useCollapsedElseIf": "warn",
				"useConsistentArrayType": {
					"level": "warn",
					"options": {
						"syntax": "generic"
					}
				},
				"useEnumInitializers": "off",
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": ["PascalCase", "kebab-case"]
					}
				},
				"useForOf": "warn",
				"useNamingConvention": "warn",
				"useShorthandAssign": "warn"
			},
			"suspicious": {
				"noApproximativeNumericConstant": "warn",
				"noConsoleLog": "warn",
				"noConstEnum": "off",
				"noEmptyBlockStatements": "warn",
				"noMisrefactoredShorthandAssign": "warn",
				"useAwait": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	}
}
